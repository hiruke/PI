@using DAL;
@{
    ViewBag.Title = "Pesquisa";
}

@{List<string> anuncios = DALAnuncios.getAnuncios();}


@if (anuncios.Count==0)
{
    <h1>Nenhum anúncio encontrado</h1>
}
else
{
    foreach (var r in anuncios)
    {

        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive">
                                <hr>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section">
                                    <div class="container">
                                        <div class="row">
                                            <a href="../../Anuncios/Visualizar/?id=r">
                                                <div class="col-md-12">
                                                    <h1>@DALAnuncios.getTitulo(r)</h1>
                                                    <br>
                                                    <a href="../../Login/PainelUsuario/?id=@DALAnuncios.getUSID(r)">
                                                        <u>@DALUsuarios.GetNomeByID(DALAnuncios.getUSID(r))</u>
                                                    </a>
                                                    <p>
                                                        @DALAnuncios.getDescricao(r);
                                                    </p>
                                                </div>
                                            </a>

                                        </div>
                                        <div class="row">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    }
}
}

