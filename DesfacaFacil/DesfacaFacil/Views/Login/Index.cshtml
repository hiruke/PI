@{
    ViewBag.Title = "Login";
}
@if (int.Parse(Session["IdUsuario"].ToString()) > 0)

{
    <meta HTTP-EQUIV="REFRESH" content="0; url=./PainelUsuario">
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{

    <div id="corpo" style="height:90%">
        <fieldset style="width:25%;margin:auto;">
            <h2>Login</h2>
            <div style="display:inline-block">
                <div>
                    @Html.Label("Login: ")
                    @Html.TextBox("Login")
                </div>
                <div>
                    @Html.Label("Senha: ")
                    @Html.Password("Senha")
                </div>
            </div>
            <br>
            <input type="submit" value="Entrar">
        </fieldset>
    </div>
}

<script type="text/javascript">
    $('document').ready(function () {
        $('li').removeClass("active");
        $("#Login").addClass("active");
    });
</script>

