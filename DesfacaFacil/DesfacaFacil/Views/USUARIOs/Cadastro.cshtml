
@{
    ViewBag.Title = "Cadastro";
}

<div id="conteudo" style="width:70%">

    @if (TempData["resultado"] != null)
    {
        switch (TempData["resultado"].ToString())
        {
            case "0x00":
                <div class="alert alert-success">
                    <b style="text-align:center"><strong>Usuário criado</strong></b>
                </div>
                break;
            case "1400":
                <div class="alert alert-warning">
                    <b style="text-align:center"><strong>Atenção! Todos os campos devem ser preenchidos.</strong></b>
                </div>
                break;
            case "1":
                <div class="alert alert-danger">
                    <b style="text-align:center"><strong>O email informado já encontra-se em uso.</strong></b>
                </div>
                break;
        }
    }
    <form method="post" action="~/USUARIOs/Cadastro" role="form" title="Cadastro de usuário" data-pg-name="Cadastro de usuário">
        <div class="form-group">
            <b>Nome</b>
            <input type="text" class="form-control" name="nome" placeholder="Nome">
            <b>Telefone</b>
            <b><br></b>
            <input type="text" class="form-control" name="telefone" placeholder="Telefone">
        </div>
        <div class="form-group">
        </div>
        <div class="form-group">
            <b>Email</b>
            <b><br></b>
            <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
            <b>Senha</b>
            <b><br></b>
            <input type="password" class="form-control" name="senha" placeholder="Senha">
        </div>
        <div class="form-group">
            <b>Estado</b>
            <b><br></b>
            <input type="text" class="form-control" name="estado" placeholder="Estado">
        </div>
        <div class="form-group">
            <b>Cidade</b>
            <b><br></b>
            <input type="text" class="form-control" name="cidade" placeholder="Cidade">
        </div><br>
        <button type="submit" class="btn">Criar Conta</button>
    </form>
</div>
