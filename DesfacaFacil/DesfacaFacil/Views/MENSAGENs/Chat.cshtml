
@{
    ViewBag.Title = "Chat";
}
@model List<DAL.DBMensagens>
<div class="section">
    <div class="container">
        <div class="row" draggable="true">
            <div class="col-lg-3 p-a-0" style="height:70%">
                <ul class="nav nav-pills  nav-stacked" draggable="true">
                    <li class="nav-item">
                        <a href="#" class="active nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Messages</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9" style="height:70%">
                <div id="chat" style="overflow:scroll;height:70%;">

                    @foreach (var m in Model)
                    {
                        if (m.usidremetente == ViewBag.Candidato.usid)
                        {
                            <div style="float:right">
                                <b>@ViewBag.Candidato.getUsuario().nome:</b>
                                <p>
                                    @m.conteudo<br>
                                    <i>@m.hora</i>
                                </p>
                            </div><br>
                        }
                        else
                        {
                            <div style="float:left">
                                <b style="text-align:right">@ViewBag.Dono.nome:</b>
                                <p>
                                    @m.conteudo<br>
                                    <i>@m.hora</i>
                                </p>
                            </div><br>
                        }
                    }

                </div>
                <div id="frm-chat" style="height:20%">
                    <form>
                        <input type="text">
                        <input type="submit" value="Enviar">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js"></script>