@{
    ViewBag.Title = "Pesquisa";
}
@model List<DBAnuncios>

@using DAL;

@if (Model.Count == 0)
{
    <h1>Nenhum item correspondente encontrado</h1>
}
else
{
    foreach (DBAnuncios anuncio in Model)
    {

        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive">
                                <hr>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section">
                                    <div class="container">
                                        <div class="row">
                                            <a href="../../Anuncios/Visualizar/?id=@anuncio.aid">
                                                <div class="col-md-12">
                                                    <h1>@anuncio.titulo</h1>
                                                    <br>
                                                    <a href="../../Login/PainelUsuario/?id=@anuncio.usid">
                                                        <u>@anuncio.datacriacao</u>
                                                    </a>
                                                    <p>
                                                        @anuncio.descricao
                                                    </p>
                                                </div>
                                            </a>

                                        </div>
                                        <div class="row">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    }
}
 

