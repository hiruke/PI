
@{
    ViewBag.Title = "Alterar";
}
@model DAL.DBAnuncios

<div class="container-fluid" style="margin:auto;width:40%">
    <h2>Alterar Anúncio</h2>
    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="~/Anuncios/Alterar" class="form-horizontal" role="form" enctype="multipart/form-data">
                <div class="form-group" hidden>
                    <input type="hidden" name="aid" id="aid" value="@Model.aid">
                    <div class="col-sm-2">
                        <label for="tipo" class="control-label">Tipo</label>
                    </div>
                    <div class="col-sm-10">
                        @{string tipo1 = "checked", tipo2 = "";
                            if (Model.tipo == 2)
                            {
                                tipo1 = "";
                                tipo2 = "checked";
                            }
                        }
                        <input type="radio" name="tipo" value="1" id="tipo" @tipo1> Doação
                        <span style="display:inline-block; width: 5%;"></span>
                        <input type="radio" name="tipo" value="2" id="tipo" @tipo2> Solicitacao

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <label for="titulo" class="control-label">Titulo</label>
                    </div>
                    <div class="col-sm-10">
                        <input name="titulo" type="text" class="form-control" id="titulo" value="@Model.titulo">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <label for="descricao" class="control-label">Descrição</label>
                    </div>
                    <div class="col-sm-10">
                        <textarea name="descricao" id="descricao" rows="10" cols="60">@Model.descricao</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <label for="imagem" class="control-label">Imagem</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="file" class="btn btn-default btn-file" accept=".jpg,.png,.gif,.jpeg" value="Buscar" name="arquivo" hidden>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <label for="categoria" class="control-label">Categoria</label>
                    </div>
                    <div class="col-sm-10">
                        <select class="form-control" name="categoria">
                            @ViewBag.categorias;
                            @foreach (DAL.DBCategorias categoria in ViewBag.categorias)
                            {
                                if (categoria.cid == Model.cid)
                                {
                                    <option name="categoria" value="@categoria.cid" checked>@categoria.nome</option>
                                }
                                else
                                {
                                    <option name="categoria" value="@categoria.cid">@categoria.nome</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <label for="duracao" class="control-label">Duração</label>
                    </div>
                    <div class="col-sm-10">
                        <select class="form-control" id="duracao" name="duracao">
                            <option value="0">Não alterar</option>
                            <option value="1">Adicionar 1 Dia</option>
                            <option value="2">Adicionar 2 Dias</option>
                            <option value="3">Adicionar 3 Dias</option>
                            <option value="4">Adicionar 4 Dias</option>
                            <option value="5">Adicionar 5 Dias</option>
                            <option value="6">Adicionar 6 Dias</option>
                            <option value="7">Adicionar 1 Semana</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Salvar Modificação</button>
                    <button type="reset" class="btn btn-default" onclick="location.href='../../Anuncios/Visualizar/@Model.aid'">Voltar</button>
                </div>
                <hr>
                <br>
                <br>
            </form>
        </div>
    </div>
</div>
