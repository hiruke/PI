
@{
    ViewBag.Title = "Visualizar";
}

@model DesfacaFacil.Models.ANUNCIO


    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div id="fullcarousel-example" data-interval="false" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png">
                                <div class="carousel-caption">
                                    <h2></h2>
                                    <p>Imagens</p>
                                </div>
                            </div>
                        </div>
                        <a class="left carousel-control" href="#fullcarousel-example" data-slide="prev"><i class="icon-prev fa fa-angle-left"></i></a>
                        <a class="right carousel-control" href="#fullcarousel-example" data-slide="next"><i class="icon-next fa fa-angle-right"></i></a>
                    </div>
                </div>
                <div class="col-md-8">
                    <h1>@Model.TITULO</h1>
                    <u>@Model.USUARIO.NOME</u>
                    <i>@Model.CATEGORIA</i>
                    <p>
                        @Model.DESCRICAO
                    </p>
                    <a class="btn btn-primary" onclick="Candidatar()">Candidatar-se</a>
                    <a href="~/MENSAGENs/Mensagens/?prodid=@Model.AID" class="btn btn-primary">Conversar com anunciante</a>
                </div>
            </div>
            <hr>

        

            @if (ViewBag.Dono) {
                <p>ljgjsdlghjslkdgjlçsdkfjgçlsdjglçsdfjglçj</p>
                <ul>
                @foreach (var s in Model.CANDIDATOS) {
                    <li>@s.USID</li>
                }
                </ul>
            }
        </div>
    </div>

    <script type="text/javascript">
        function Candidatar(){
            if(confirm("Deseja candidatar-se ao anuncio?")){
                
                location.href="../../candidatos/Candidatar/?idanuncio=@Model.AID";
                
            }
        }
    </script>
}